FROM alpine:latest

RUN apk update && apk add --no-cache nginx openssl

RUN mkdir -p /etc/nginx/certs \
	&& openssl req -x509 -newkey rsa:4096 -keyout /etc/nginx/certs/server.key -out /etc/nginx/certs/server.crt -days 365 -nodes \
    -subj "/C=FR/ST=Paris/L=Paris/O=42 School/OU=Inception/CN=localhost"

COPY conf/nginx.conf /etc/nginx/nginx.conf

CMD ["nginx", "-g", "deamon off;"]

ENTRYPOINT [ "./tools/entrypoint.sh" ]